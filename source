# User Interections
            
products = ['Honey', 'Gir Gau Ark' ,'Nasya Bindu' , 'Netra Jyoti','Karna Drop' ,'Kapoor' ,'Dant Manjan' ,'Hair Tonic' ,'Skin Cream' ,'Agarbatti' ,'Dhoop Sticks','Havan Samagri','Gau Pheny']
print('\n',products)

in_name = input("\nProduct name (List format): ")
in_quantity = int(input('Enter Quantity (litres/grams): '))
in_pieces = int(input('Enter pieces: '))
in_discount = int(input('Enter Discount Percentage: '))

# Final Call

if in_name == 'Honey': 
    honey = items(in_name,in_quantity,in_pieces,in_discount) ; honey.honey()
    
if in_name == 'Gir Gau Ark': 
    girGauArk = items(in_name,in_quantity,in_pieces,in_discount) ; girGauArk.girGauArk()
    
if in_name == 'Nasya Bindu': 
    nasyaBindu = items(in_name,in_quantity,in_pieces,in_discount) ; nasyaBindu.nasyaBindu()
    
