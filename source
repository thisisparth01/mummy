# product name, price, quantity, grams/litres, margin, discount, high discount, courier, total, stock

class items:
    def __init__(self, name, quantity, pieces, discount=0, price=0):

        # common attributes
        self.name = name
        self.quantity = quantity
        self.pieces = pieces
        self.discount = discount
        self.price = price 
        
    def final(self):
        return int(self.price*self.pieces*(self.quantity/self.basic)   -  self.price*self.pieces*(self.quantity/self.basic)*(self.discount/100))+1
        
    def honey(self):
        product = honey
        
        product.basic=1000
        product.price = 450
        product.original = 400
        product.stock = 3000
        product.stockLeft = product.stock - (self.pieces*product.quantity)
        
        print('\nName of product: ',self.name)
        print('Selling Price: ',product.final(),' (discounted rate:)',self.discount,'%')
        print('Original Price: ',product.original*self.pieces*(self.quantity/self.basic))
        print('Stock now:',product.stock,'grams  Stock Left:',product.stockLeft,'grams')
        print('Margin Left:',product.final()-(product.original*self.pieces*(self.quantity/self.basic)))

        
    def girGauArk(self):
        
        product = girGauArk
        
        product.price = 35
